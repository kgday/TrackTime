<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TrackTime.Views.MessageBoxView">
    <Grid ColumnDefinitions="*,Auto,Auto,*" RowDefinitions="*,Auto" >
      <TextBlock x:Name="MessageText" Text="This is the message to be shown." HorizontalAlignment="Center" VerticalAlignment="Center"
                 Grid.Row="0" Grid.ColumnSpan="4" Margin="10"/>
      <Button x:Name="OKButton" Grid.Column="1" Grid.Row="1" Margin="2">OK</Button>
    </Grid>
</UserControl>
