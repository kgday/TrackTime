          <StackPanel Orientation="Horizontal" Grid.Row="1">
             <TextBlock>Dated</TextBlock>
             <TextBlock x:Name="DateCreatedText" Margin="3,0" Text="15/10/2021"/>
             <TextBlock Margin="3,0">Due</TextBlock>
             <TextBlock x:Name="DateDueText" Text="18/10/2021"/>
          </StackPanel>
          <TextBlock x:Name="DescriptionText" TextWrapping="WrapWithOverflow" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Text="Description" />
          <TextBlock x:Name="BodyText" TextWrapping="WrapWithOverflow" Grid.ColumnSpan="3" Grid.Row="3" Text="Body"/>
        </Grid>
        <Grid x:Name="ButtonPanel" VerticalAlignment="Bottom" ColumnDefinitions="Auto,Auto" Grid.Column="1"  Margin="5,0,0,0" >
          <Button x:Name="DeleteButton" BorderThickness="0" Background="Transparent" Padding="0">
            <Image Width="21" Height="21" Source="{StaticResource DeleteButtonImage}"/>
          </Button>
          <Button x:Name="EditButton" BorderThickness="0" Background="Transparent" Padding="0" Grid.Column="1" >
            <Image Width="18" Height="18" Source="{StaticResource EditButtonImage}"/>
          </Button>
        </Grid>
      </Grid>

      <Grid x:Name="EditingGrid" ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto,*,Auto" Grid.Row="1" IsVisible="True">
        <TextBox x:Name="WorkItemTitleEdit"  FontSize="16" Watermark="Work Item Title"/>        
        <TextBox x:Name="WorkItemDescriptionEdit"  Grid.Row="1" Watermark="Description"/>
        <WrapPanel Orientation="Horizontal" Grid.Row="2"  >
          <CheckBox x:Name="IsFixedPriceCheckBox" IsChecked="true" Margin="10,0" >Is Fixed Price</CheckBox>
          <CheckBox x:Name="IsBillableCheckBox" IsChecked="true"  Margin="10,0" Grid.Row="2" >Is Billable</CheckBox>
          <CheckBox x:Name="IsCompletedCheckBox" IsChecked="true"  Margin="10,0" Grid.Row="2" >Been Completed</CheckBox>
          <CheckBox x:Name="HasBeenBilledCheckBox" IsChecked="true"  Margin="10,0" Grid.Row="2" >Been Billed</CheckBox> 
        </WrapPanel>


        <TextBox x:Name="BodyEdit" TextWrapping="WrapWithOverflow" Margin="0,1,0,0"
                  Grid.Row="3" Watermark="Details" MinHeight="60"/>
        <DockPanel  Grid.Row="4" >
          <StackPanel   Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Bottom">
            <Button x:Name="SaveButton" BorderThickness="0" Background="Transparent">
              <Image Width="20" Height="20" Source="{StaticResource SaveEditButtonImage}"/>
            </Button>
            <Button x:Name="CancelButton" BorderThickness="0" Background="Transparent">
              <Image Width="20" Height="20" Source="{StaticResource CancelEditButtonImage}"/>
            </Button>
          </StackPanel>
          <TextBlock x:Name="ErrorText" Text="Error" Margin="5" Foreground="Red" TextWrapping="WrapWithOverflow"/>
        </DockPanel>
      </Grid>
    </Grid>
  </Border>
</UserControl>
