<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TrackTime.Views.ConfirmationView">
    <Grid ColumnDefinitions="*,Auto,Auto,*" RowDefinitions="*,Auto" >
      <TextBlock x:Name="PromptText" Text="Are you sure you wish to delete this item?" HorizontalAlignment="Center" VerticalAlignment="Center"
                 Grid.Row="0" Grid.ColumnSpan="4" Margin="10"/>
      <Button x:Name="NoButton" Grid.Column="1" Grid.Row="1" Margin="2">No</Button>
      <Button x:Name="YesButton" Grid.Column="2" Grid.Row="1" Margin="2">Yes</Button>
    </Grid>
</UserControl>
